#*/ ##
function ogLockImage ()
{
# Variables locales
local IMGDIR

# Si se solicita, mostrar ayuda.
if [ "$*" == "help" ]; then
    ogHelp "$FUNCNAME" "$FUNCNAME [str_repo] path_image" \
           "$FUNCNAME /opt/opengnsys/images/aula1/winxp.img" \
           "$FUNCNAME REPO /aula1/winxp.img"
